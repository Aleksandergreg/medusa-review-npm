{
    "compilerOptions": {
      "lib": ["es2020"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "es2020",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": "src",
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }